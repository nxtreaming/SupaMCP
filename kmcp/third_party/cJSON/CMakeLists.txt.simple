# Simple CMakeLists.txt for cJSON
cmake_minimum_required(VERSION 3.0)
project(cJSON C)

# Add cJSON library
add_library(cJSON STATIC cJSON.c)
target_include_directories(cJSON PUBLIC ${CMAKE_CURRENT_SOURCE_DIR})

# Add cJSON_Utils library (optional)
add_library(cJSON_Utils STATIC cJSON_Utils.c)
target_link_libraries(cJSON_Utils cJSON)
target_include_directories(cJSON_Utils PUBLIC ${CMAKE_CURRENT_SOURCE_DIR})
